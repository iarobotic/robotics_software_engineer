<?xml version="1.0"?>
<robot name="3dof_arm_with_fingers">
    <!-- Base Link -->
    <link name="base_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
            <material name="blue">
                <color rgba="0 0 0.8 1"/>
            </material>
        </visual>
    </link>

    <!-- Link 1 -->
    <link name="link_1">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.5"/>
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 1.57 0"/>
            <material name="red">
                <color rgba="0.8 0 0 1"/>
            </material>
        </visual>
    </link>

    <joint name="joint_base" type="continuous">
        <parent link="base_link"/>
        <child link="link_1"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Link 2 -->
    <link name="link_2">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.5"/>
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 1.57 0"/>
            <material name="green">
                <color rgba="0 0.8 0 1"/>
            </material>
        </visual>
    </link>

    <joint name="joint_2" type="revolute">
        <parent link="link_1"/>
        <child link="link_2"/>
        <origin xyz="0.5 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit effort="10.0" lower="-1.57" upper="1.57" velocity="1.0"/>
    </joint>

    <!-- Link 3 -->
    <link name="link_3">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.3"/>
            </geometry>
            <origin xyz="0.15 0 0" rpy="0 1.57 0"/>
            <material name="yellow">
                <color rgba="1 1 0 1"/>
            </material>
        </visual>
    </link>

    <joint name="joint_3" type="prismatic">
        <parent link="link_2"/>
        <child link="link_3"/>
        <origin xyz="0.5 0 0" rpy="0 0 0"/>
        <axis xyz="-1 0 0"/>
        <limit effort="10.0" lower="0" upper="0.3" velocity="1.0"/>
    </joint>

    <!-- Finger Links -->
    <link name="finger_1">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.1"/>
            </geometry>
            <origin xyz="0.05 0 0" rpy="0 1.57 0"/>
            <material name="gray">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
    </link>

    <joint name="finger_joint_1" type="revolute">
        <parent link="link_3"/>
        <child link="finger_1"/>
        <origin xyz="0.3 0.02 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="10.0" lower="0" upper="1.57" velocity="1.0"/>
    </joint>

    <link name="finger_2">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.1"/>
            </geometry>
            <origin xyz="0.05 0 0" rpy="0 1.57 0"/>
            <material name="gray"/>
        </visual>
    </link>

    <joint name="finger_joint_2" type="revolute">
        <parent link="link_3"/>
        <child link="finger_2"/>
        <origin xyz="0.3 -0.02 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="10.0" lower="-1.57" upper="0" velocity="1.0"/>
    </joint>
</robot>