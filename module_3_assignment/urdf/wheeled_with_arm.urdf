<?xml version="1.0"?>
<robot name="wheeled_with_arm">
    <!-- Material Definitions -->
    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>

    <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
    </material>

    <material name="red">
        <color rgba="0.8 0 0 1"/>
    </material>

    <material name="green">
        <color rgba="0 0.8 0 1"/>
    </material>

    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>

    <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <!-- Wheeled Robot Base Components -->
    <!-- Base Link -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.5 0.3 0.1"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.3 0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="5.0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" 
                    iyy="0.1" iyz="0.0" 
                    izz="0.1"/>
        </inertial>
    </link>

    <!-- Right Wheel -->
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" 
                    iyy="0.01" iyz="0.0" 
                    izz="0.01"/>
        </inertial>
    </link>

    <!-- Left Wheel -->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" 
                    iyy="0.01" iyz="0.0" 
                    izz="0.01"/>
        </inertial>
    </link>    

    <!-- Lift Link -->
    <link name="lift">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.3"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.1 0.3"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="5.0"/>
            <origin xyz="0 0 0.15" rpy="0 0 0"/>
            <inertia ixx="0.02" ixy="0.0" ixz="0.0" 
                    iyy="0.02" iyz="0.0" 
                    izz="0.02"/>
        </inertial>
    </link>

    <!-- Arm Components -->
    <!-- Arm Base -->
    <link name="arm_base">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <!-- Link 1 -->
    <link name="link_1">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.5"/>
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 1.57 0"/>
            <material name="red"/>
        </visual>
    </link>

    <!-- Link 2 -->
    <link name="link_2">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.5"/>
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 1.57 0"/>
            <material name="green"/>
        </visual>
    </link>

    <!-- Link 3 -->
    <link name="link_3">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.3"/>
            </geometry>
            <origin xyz="0.15 0 0" rpy="0 1.57 0"/>
            <material name="yellow"/>
        </visual>
    </link>

    <!-- Fingers -->
    <link name="finger_1">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.1"/>
            </geometry>
            <origin xyz="0.05 0 0" rpy="0 1.57 0"/>
            <material name="gray"/>
        </visual>
    </link>

    <link name="finger_2">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.1"/>
            </geometry>
            <origin xyz="0.05 0 0" rpy="0 1.57 0"/>
            <material name="gray"/>
        </visual>
    </link>

    <!-- Joints for Wheeled Base -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.175 0" rpy="1.5708 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.175 0" rpy="1.5708 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="lift_joint" type="prismatic">
        <parent link="base_link"/>
        <child link="lift"/>
        <origin xyz="0 0 0.05"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="0" upper="0.5" velocity="0.5"/>
    </joint>

    <!-- Connection Joint between Lift and Arm -->
    <joint name="lift_to_arm_joint" type="fixed">
        <parent link="lift"/>
        <child link="arm_base"/>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </joint>

    <!-- Joints for Arm -->
    <joint name="joint_base" type="continuous">
        <parent link="arm_base"/>
        <child link="link_1"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="joint_2" type="revolute">
        <parent link="link_1"/>
        <child link="link_2"/>
        <origin xyz="0.5 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit effort="10.0" lower="-1.57" upper="1.57" velocity="1.0"/>
    </joint>

    <joint name="joint_3" type="prismatic">
        <parent link="link_2"/>
        <child link="link_3"/>
        <origin xyz="0.5 0 0" rpy="0 0 0"/>
        <axis xyz="-1 0 0"/>
        <limit effort="10.0" lower="0" upper="0.3" velocity="1.0"/>
    </joint>

    <joint name="finger_joint_1" type="revolute">
        <parent link="link_3"/>
        <child link="finger_1"/>
        <origin xyz="0.3 0.02 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="10.0" lower="0" upper="1.57" velocity="1.0"/>
    </joint>

    <joint name="finger_joint_2" type="revolute">
        <parent link="link_3"/>
        <child link="finger_2"/>
        <origin xyz="0.3 -0.02 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="10.0" lower="-1.57" upper="0" velocity="1.0"/>
    </joint>

</robot>